{%- style -%}
  .hello-section-wrapper {
    background-color: #f0f0f0;
    padding: 20px;
    border: 1px solid #ccc;
  }
  .hello-section-title {
    color: blue;
  }
  .event-details {
    margin-top: 10px;
    padding: 10px;
    border: 1px solid #eee;
    background-color: #fff;
  }
  .event-image {
    aspect-ratio: 1 / 1;
    object-fit: cover;
  }
{%- endstyle -%}

<div id="event-details-section">
  <div class="hello-section-wrapper">
    <h3 class="hello-section-title">Event Details</h3>
    <p>{{ product.selected_or_first_available_variant.title }}</p>
    <div>
      {% if product.selected_or_first_available_variant.metafields.custom.event_details %}
        <div class="event-details">
          {{ product.selected_or_first_available_variant.metafields.custom.event_details | metafield_tag }}
        </div>
      {% else %}
        <p>No event details available for the selected variant.</p>
      {% endif %}
    </div>
    <div>
      <img
        src="{{  product.selected_or_first_available_variant.metafields.custom.event_image | image_url: height: 640 }}"
        alt="{{ product.selected_or_first_available_variant.metafields.custom.event_image.alt | escape }}"
        loading="lazy"
        width="{{ product.selected_or_first_available_variant.metafields.custom.event_image.width }}"
        height="{{ product.selected_or_first_available_variant.metafields.custom.event_image.height }}"
        class="event-image"
      >
    </div>
  </div>
</div>

<script></script>

{% schema %}
{
  "name": "Event Details",
  "tag": "section",
  "class": "section",
  "presets": [
    {
      "name": "Event Details"
    }
  ]
}
{% endschema %}
