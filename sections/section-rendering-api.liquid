{%- style -%}
  /* For mobile phones: */


  @media only screen and (min-width: 768px) {
    /* For desktop: */

  }

  .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    }

    @media screen and (min-width: 750px) {
      .section-{{ section.id }}-padding {
        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
      }
    }
{%- endstyle -%}

<div class="section-{{ section.id }}-padding">
  <div class="page-width">
    {% if section.settings.image != blank %}
      <img
        src="{{ section.settings.image | image_url: height: 640 }}"
        alt="{{ section.settings.image.alt | escape }}"
        loading="lazy"
        width="{{ section.settings.image.width }}"
        height="{{ section.settings.image.height }}"
        class=""
      >
    {% else %}
      {{ 'product-1' | placeholder_svg_tag }}
    {% endif %}

    <h2 class="rich-text__heading rte inline-richtext h1 scroll-trigger animate--slide-in">
      {{ section.settings.h1 }}
    </h2>
    <span class="rich-text__text rte scroll-trigger animate--slide-in">{{ section.settings.p }}</span>
    {% if section.settings.link != blank %}
      <a class="button button--primary" href="{{ section.settings.link }}">{{ section.settings.btn_text }}</a>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Section Rendering API",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "h1",
      "default": "Heading",
      "label": "Heading"
    },
    {
      "type": "richtext",
      "id": "p",
      "default": "<p>Add your paragraph here</p>",
      "label": "Add your paragraph here"
    },
    {
      "type": "text",
      "id": "btn_text",
      "label": "Button Text",
      "default": "Learn More"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Button Link"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Section Padding Top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Section Padding Bottom",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Section Rendering API"
    }
  ]
}
{% endschema %}
