{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  .section-{{ section.id }}-max-width {
    max-width: {{ section.settings.max_width }}px;
    margin: auto;
    padding: 0 1.5rem;
  }

  .grid-container {
    display: grid;
    grid-template-columns: repeat(12, 1fr);
    column-gap: 20px;
    row-gap: 40px;
  }

  .grid-column {
    display: flex;
    flex-direction: column;
  }

  .grid-column img {
    width: 100%;
    height: auto;
    display: block;
  }

  .column-button {
    display: inline-block;
    margin-top: 10px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }

    .section-{{ section.id }}-max-width {
      padding: 0 5rem;
    }
  }
{%- endstyle -%}

<div
  class="section-{{ section.id }}-padding color-{{ section.settings.color_scheme }}"
  style="background: {{ section.settings.background }};"
>
  <div class="section-{{ section.id }}-max-width page-width">
    {% comment %} Section header {% endcomment %}
    <div class="section-header">
      <h2>{{ section.settings.heading }}</h2>
      <div>{{ section.settings.content }}</div>
    </div>

    {% comment %} GRID DIV  {% endcomment %}
    {% comment %} COLUMN WITH Grid span WIDTH AND HEIGHT CONTROLLED BY SETTINGS. {% endcomment %}
    {% comment %} Each column has image, heading, text, and button {% endcomment %}
    <div class="grid-container">
      {% for block in section.blocks %}
        <div class="grid-column grid-column-{{ block.id }}" {{ block.shopify_attributes }}>
          {% if block.settings.col_image != blank %}
            <img
              src="{{ block.settings.col_image | img_url: 'master' }}"
              alt="{{ block.settings.col_heading | escape }}"
            >
          {% endif %}

          <h3>{{ block.settings.col_heading }}</h3>

          <div class="column-content">
            {{ block.settings.col_content }}
          </div>

          {% if block.settings.button_label != blank %}
            <a href="{{ block.settings.button_link }}" class="column-button">
              {{ block.settings.button_label }}
            </a>
          {% endif %}
        </div>

        <style>
          .grid-column-{{ block.id }} {
            grid-column: span {{ block.settings.col_span }} / span {{ block.settings.col_span }};
          }
        </style>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Flexible Grid",
  "tag": "section",
  "class": "section",
  "settings": [
    {
     "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "Section Heading"
    },
    {
      "type": "richtext",
      "id": "content",
      "label": "Section Content",
      "default": "<p>Section content goes here.</p>"
    },
    {
      "type": "color",
      "id": "background",
      "label": "Background",
      "default": "#fff"
    },
    {
      "type": "range",
      "id": "max_width",
      "min": 800,
      "max": 3000,
      "step": 50,
      "unit": "px",
      "label": "Section Max Width",
      "default": 1500
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Section Padding Top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Section Padding Bottom",
      "default": 36
    },
    {
      "type": "select",
      "id": "color_scheme",
      "label": "Color scheme",
      "options": [
        {
          "value": "background-1",
          "label": "Background 1"
        },
        {
          "value": "background-2",
          "label": "Background 2"
        },
        {
          "value": "inverse",
          "label": "Inverse"
        },
        {
          "value": "accent-1",
          "label": "Accent 1"
        }
      ],
      "default": "background-1"
    }
  ],
  "blocks": [
    {
      "type": "grid-col",
      "name": "Grid Column",
      "settings": [
        {
          "type": "image_picker",
          "id": "col_image",
          "label": "Column Image"
        },
        {
          "type": "text",
          "id": "col_heading",
          "label": "Column Heading",
          "default": "Column Heading"
        },
        {
          "type": "richtext",
          "id": "col_content",
          "label": "Column Content",
          "default": "<p>Column content goes here.</p>"
        },
        {
          "type": "text",
          "id": "button_label",
          "label": "Button Label"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button Link"
        },
        {
          "type": "select",
          "id": "col_span",
          "label": "Column Span",
          "options": [
            {
              "value": "1",
              "label": "1 Column"
            },
            {
              "value": "2",
              "label": "2 Columns"
            },
            {
              "value": "3",
              "label": "3 Columns"
            },
            {
              "value": "4",
              "label": "4 Columns"
            },
            {
              "value": "6",
              "label": "6 Columns"
            },
            {
              "value": "12",
              "label": "12 Columns (Full Width)"
            }
          ],
          "default": "4"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Flexible Grid",
      "blocks": [
        {
          "type": "grid-col",
          "settings": {
            "col_heading": "Col 1",
            "col_content": "<p>This is the content for the first column.</p>",
            "col_span": "4"
          }
        },
        {
          "type": "grid-col",
          "settings": {
            "col_heading": "Col 2",
            "col_content": "<p>This is the content for the second column.</p>",
            "col_span": "4"
          }
        },
        {
          "type": "grid-col",
          "settings": {
            "col_heading": "Col 3",
            "col_content": "<p>Here's the content for the third column.</p>",
            "col_span": "4"
          }
        }
      ]
    }
  ]
}
{% endschema %}
