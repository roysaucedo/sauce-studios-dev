{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  .section-{{ section.id }}-max-width {
    max-width: {{ section.settings.max_width }}px;
    margin: auto;
    padding: 0 1.5rem;
  }

  .grid-container {
    display: grid;
    grid-template-rows: 1fr 1fr 1fr;
  }



  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }

    .section-{{ section.id }}-max-width {
      padding: 0 5rem;
    }
  }
{%- endstyle -%}

<div class="section-{{ section.id }}-padding color-{{ section.settings.color_scheme }}">
  <div class="section-{{ section.id }}-max-width page-width">
    {% comment %} GRID DIV  {% endcomment %}
    {% comment %} COLUMN WITH WIDTH AND HEIGHT CONTROLLED BY SETTINGS. {% endcomment %}
    {% comment %} Each column has image, heading, text, and button {% endcomment %}
    {% comment %} Example: https://tinyurl.com/29ej9pc7 {% endcomment %}
    <div>
      <h2>{{ section.settings.heading }}</h2>
      <div>{{ section.settings.text }}</div>
    </div>
    <div class="grid-container">
      {% for blocks in section.blocks %}
        <div class="grid-column-{{ block.id }}"></div>

        <style>
          .grid-column-{{ block.id }} {
            grid-column: span {{ block.settings.col_span }} / span {{ block.settings.col_span }};
          }
        </style>
      {% endfor %}
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {

  });
</script>

{% schema %}
{
  "name": "Flexible Grid",
  "tag": "section",
  "class": "section",
  "settings": [
    {
     "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "Section Heading"
    },
    {
      "type": "richtext",
      "id": "content",
      "label": "Section Content",
      "default": "<p>Section content goes here.</p>"
    },
    {
      "type": "color_background",
      "id": "background",
      "label": "Background",
      "default": "linear-gradient(#ffffff, #000000)"
    },
    {
      "type": "range",
      "id": "max_width",
      "min": 800,
      "max": 3000,
      "step": 50,
      "unit": "px",
      "label": "Section Max Width",
      "default": 1500
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Section Padding Top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Section Padding Bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "grid-col",
      "name": "Grid Column",
      "settings": [
        {
          "type": "image_picker",
          "id": "col_image",
          "label": "Column Image"
        },
        {
          "type": "text",
          "id": "col_heading",
          "label": "Column Heading",
          "default": "Column Heading"
        },
        {
          "type": "richtext",
          "id": "col_content",
          "label": "Column Content",
          "default": "<p>Column content goes here.</p>"
        },
         {
          "type": "text",
          "id": "col_span",
          "label": "Column Span",
          "default": "1"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Flexible Grid",
      "blocks": [
        {
          "type": "grid-col",
          "settings": {
            "col_heading": "Tab 1",
            "col_content": "<p>This is the content for the first tab. It's active by default.</p>"
          }
        },
        {
          "type": "grid-col",
          "settings": {
            "col_heading": "Tab 2",
            "col_content": "<p>This is the content for the second tab.</p><p>It has some additional information.</p>"
          }
        },
        {
          "type": "grid-col",
          "settings": {
            "col_heading": "Tab 3",
            "col_content": "<p>Here's the content for the third tablude other components as well.</p>"
          }
        }
      ]
    }
  ]
}
{% endschema %}
