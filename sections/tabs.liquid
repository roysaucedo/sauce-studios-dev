{%- style -%}
.section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

.section-{{ section.id }}-max-width {
    max-width: {{ section.settings.max_width }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}



<div class="section-{{ section.id }}-padding">
    <div class="section-{{ section.id }}-max-width">
        <!-- Tab Navigation -->
        <div class="flex border-b border-gray-200">
            <button class="tab-button py-2 px-4 border-b-2 border-blue-500 text-blue-600 font-medium cursor-pointer hover:text-gray-700 hover:font-medium" 
                    data-tab="tab1">
                Tab 1
            </button>
            <button class="tab-button py-2 px-4 border-b-2 border-transparent text-gray-500 font-medium cursor-pointer hover:text-gray-700" 
                    data-tab="tab2">
                Tab 2
            </button>
            <button class="tab-button py-2 px-4 border-b-2 border-transparent text-gray-500 font-medium cursor-pointer hover:text-gray-700" 
                    data-tab="tab3">
                Tab 3
            </button>
            <button class="tab-button py-2 px-4 border-b-2 border-transparent text-gray-500 font-medium cursor-pointer hover:text-gray-700" 
                    data-tab="tab4">
                Tab 4
            </button>
        </div>
        
        <!-- Tab Content -->
        <div class="py-4">
            <div id="tab1" class="tab-content">
                <h2 class="text-xl font-semibold mb-2">Tab 1 Content</h2>
                <p>This is the content for the first tab. It's active by default.</p>
            </div>
            
            <div id="tab2" class="tab-content hidden">
                <h2 class="text-xl font-semibold mb-2">Tab 2 Content</h2>
                <p>This is the content for the second tab.</p>
                <p class="mt-2">It has some additional information.</p>
            </div>
            
            <div id="tab3" class="tab-content hidden">
                <h2 class="text-xl font-semibold mb-2">Tab 3 Content</h2>
                <p>Here's the content for the third tab.</p>
                <div class="mt-3 p-3 bg-gray-100 rounded-md">
                    <p>It can include other components as well.</p>
                </div>
            </div>
            
            <div id="tab4" class="tab-content hidden">
              <h2 class="text-xl font-semibold mb-2">Tab 4 Content</h2>
              <p>Here's the content for the third tab.</p>
              <div class="mt-3 p-3 bg-gray-100 rounded-md">
                  <p>It can include other components as well.</p>
              </div>
          </div>
        </div>
    </div>

    <script>
        // Get all tab buttons and content
        const tabButtons = document.querySelectorAll('.tab-button');
        const tabContents = document.querySelectorAll('.tab-content');
        
        // Add click event to each tab button
        tabButtons.forEach(button => {
            button.addEventListener('click', () => {
                // Get the tab to activate
                const tabToActivate = button.dataset.tab;
                
                // Hide all tab contents
                tabContents.forEach(content => {
                    content.classList.add('hidden');
                });
                
                // Show the selected tab content
                document.getElementById(tabToActivate).classList.remove('hidden');
                
                // Reset all button styles
                tabButtons.forEach(btn => {
                    btn.classList.remove('border-blue-500', 'text-blue-600');
                    btn.classList.add('border-transparent', 'text-gray-500');
                });
                
                // Style the active button
                button.classList.remove('border-transparent', 'text-gray-500');
                button.classList.add('border-blue-500', 'text-blue-600');
            });
        });
    </script>
</div>


{% schema %}
{
  "name": "Tabs",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "h1",
      "default": "Heading",
      "label": "Heading"
    },
    {
      "type": "richtext",
      "id": "p",
      "default": "<p>Add your paragraph here</p>",
      "label": "Add your paragraph here"
    },
    {
      "type": "text",
      "id": "btn_text",
      "label": "Button Text",
      "default": "Learn More"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Button Link"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "range",
      "id": "max_width",
      "min": 800,
      "max": 3000,
      "step": 50,
      "unit": "px",
      "label": "Section Max Width",
      "default": 1500
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Section Padding Top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Section Padding Bottom",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Tabs"
    }
  ]
}
{% endschema %}